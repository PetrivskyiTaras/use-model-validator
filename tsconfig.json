{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext",
      "es2017",
      "es2018"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/lib/**/*",
    "**/__tests__/*.test.tsx",
    "**/__tests__/*.test.ts",
    "**/__mock__/**/*"
  ]
}
